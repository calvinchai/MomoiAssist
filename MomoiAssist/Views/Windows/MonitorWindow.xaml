<Window x:Class="MomoiAssist.Views.Windows.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MomoiAssist.Views.Windows"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MonitorWindow,
                                 IsDesignTimeCreatable=False}"
        Title="MonitorWindow" Height="450" Width="800" Left="{Binding ViewModel.Left}" Top="{Binding ViewModel.Top}">



    <Grid>
        <Image Source="{Binding ViewModel.Screenshot}"/>
    </Grid>
</Window>
